<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="hxeclipse.core.targets" name="Haxe Targets" schema="schema/hxeclipse.core.target.exsd"/>
   <extension-point id="hxeclipse.core.librarySelectors" name="Library Selectors" schema="schema/hxeclipse.core.librarySelectors.exsd"/>
   <extension-point id="hxeclipse.core.editor.quickFix" name="Quick Fix" schema="schema/hxeclipse.core.editor.quickFix.exsd"/>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="hxeclipse.core.preferences.HaxePreferencePage"
            id="hxeclipse.core.preferences.Haxe"
            name="Haxe">
      </page>
      <page
            category="hxeclipse.core.preferences.Haxe"
            class="hxeclipse.core.preferences.AdvancedPreferencePage"
            id="hxeclipse.core.Advanced"
            name="Advanced">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="hxeclipse.core.haxe"
            name="Haxe">
      </category>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="hx"
            id="hxeclipse.core.haxe"
            name="Haxe File"
            priority="high">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="hxeclipse.core.editor.HaxeEditor"
            default="true"
            extensions="hx"
            icon="icons/haxe.ico"
            id="hxeclipse.core.editor"
            name="Haxe Editor">
         <contentTypeBinding
               contentTypeId="hxeclipse.core.haxe">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         id="hxeclipse.core.haxeNature"
         name="Haxe Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="hxeclipse.core.project.HaxeProjectNature">
         </run>
      </runtime>
      <builder
            id="hxeclipse.core.haxeBuilder">
      </builder>
   </extension>
   <extension
         id="hxeclipse.core.haxeBuilder"
         name="Haxe Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="false"
            hasNature="true"
            isConfigurable="false">
         <run
               class="hxeclipse.core.project.HaxeProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="hxeclipse.core.haxe"
            name="Haxe">
      </category>
      <wizard
            category="hxeclipse.core.haxe"
            class="hxeclipse.core.ui.wizards.NewHaxeProjectWizard"
            hasPages="true"
            icon="icons/haxe.ico"
            id="hxeclipse.core.newHaxeProject"
            name="Haxe Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IFile"
            class="hxeclipse.core.internal.HaxeClassAdapterFactory">
         <adapter
               type="hxeclipse.core.IHaxeClass">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.core.resources.IProject"
            class="hxeclipse.core.internal.HaxeProjectAdapterFactory">
         <adapter
               type="hxeclipse.core.IHaxeProject">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="hxeclipse.core.properties.HaxeTargetsPropertyPage"
            id="hxeclipse.core.haxeTargets"
            name="Haxe Targets">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="hxeclipse.core.haxeNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="hxeclipse.core.targets">
      <option-collection
            class="hxeclipse.core.internal.GeneralOptionCollection"
            editor-factory="hxeclipse.core.ui.widgets.target.general.GeneralOptionCollectionEditorFactory"
            id="hxeclipse.core.GeneralOptionCollection">
      </option-collection>
      <option-collection
            class="hxeclipse.core.internal.CompilerOptionCollection"
            editor-factory="hxeclipse.core.ui.widgets.target.compiler.CompilerOptionCollectionEditorFactory"
            id="hxeclipse.core.CompilerOptionCollection">
      </option-collection>
   </extension>
   <extension
         point="hxeclipse.core.targets">
      <target
            class="hxeclipse.core.TestTargetDescription"
            icon="icons/haxe.ico"
            name="Test Target">
         <option-collection-reference
               reference="hxeclipse.core.GeneralOptionCollection"></option-collection-reference>
         <option-collection-reference
               reference="hxeclipse.core.CompilerOptionCollection">
         </option-collection-reference>
         <option-collection-reference
               reference="hxeclipse.core.TestOptionCollection">
         </option-collection-reference>
      </target>
      <option-collection
            class="hxeclipse.core.TestOptionCollection"
            editor-factory="hxeclipse.core.TestOptionCollectionEditorFactory"
            id="hxeclipse.core.TestOptionCollection">
      </option-collection>
   </extension>
   <extension
         id="hxeclipse.core.haxeProblemMarker"
         name="Haxe Problem Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="hxeclipse.core.editor.quickFix.QuickFix"
            markerType="hxeclipse.core.haxeProblemMarker">
      </markerResolutionGenerator>
   </extension>

</plugin>
